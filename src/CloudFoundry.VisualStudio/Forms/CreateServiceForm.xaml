<ui:DialogWindow x:Class="CloudFoundry.VisualStudio.Forms.CreateServiceForm"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:System="clr-namespace:System;assembly=mscorlib"
                 xmlns:wpf="clr-namespace:CloudFoundry.VisualStudio.Style" 
                 xmlns:ui="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.12.0"
                 xmlns:converters="clr-namespace:CloudFoundry.VisualStudio.Converters"
                 xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" 
                 Title="Create Service Instance" Style="{DynamicResource DialogWindowStyle}" Height="400" Width="500" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow">

    <ui:DialogWindow.Resources>
        <ResourceDictionary>
            <converters:VisibilityConverter x:Key="Visibility" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\Style\Controls.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ui:DialogWindow.Resources>
    <xctk:BusyIndicator Name="busyIndicator" IsBusy="{Binding Refreshing}" BusyContent="{Binding RefreshMessage}">
        <xctk:Wizard NextButtonVisibility="Collapsed" BackButtonVisibility="Collapsed" HelpButtonVisibility="Collapsed" 
                 CancelButtonClosesWindow="False" Cancel="Wizard_Cancel" FinishButtonContent="OK" FinishButtonClosesWindow="False" Finish="Wizard_Finish">

            <xctk:WizardPage x:Name="TargetPage" PageType= "Interior"
                         Title="Create Cloud Foundry Service Instance" CanFinish="True">
                <Grid Margin="50,0,50,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Label Content="Service Name" Grid.Row="0" Grid.Column="0"></Label>
                    <TextBox Name="tbServiceName" HorizontalAlignment="Stretch" Grid.Row="1" Grid.Column="0" Width="auto"></TextBox>

                <Label Content="Service Type" Grid.Row="2" Grid.Column="0" ></Label>
                <ComboBox Name="cbServiceType" Grid.Row="3" Grid.Column="0" ItemsSource="{Binding ServiceTypes}" SelectedValuePath="EntityMetadata.Guid" DisplayMemberPath="Label" SelectedValue="{Binding SelectedServiceType}"></ComboBox>

                <Label Content="Service Plan" Grid.Row="4" Grid.Column="0" ></Label>
                <ComboBox Name="cbServicePlan" Grid.Row="5" Grid.Column="0" Width="auto" ItemsSource="{Binding AvailableServicePlans}"  DisplayMemberPath="Name" SelectedValuePath="EntityMetadata.Guid"></ComboBox>

                    <TextBox Grid.Row="6" IsReadOnly="True" TextWrapping="Wrap" 
                 BorderBrush="Transparent" ScrollViewer.VerticalScrollBarVisibility="Auto"
                 Foreground="Crimson" MinLines="3" MaxLines="3" Background="Transparent"
                 Text="{Binding Path=Error.ErrorMessage}" 
                 Visibility="{Binding Path=Error.HasErrors, Converter={StaticResource Visibility}}"/>

                </Grid>
            </xctk:WizardPage>
        </xctk:Wizard>
    </xctk:BusyIndicator>
</ui:DialogWindow>
